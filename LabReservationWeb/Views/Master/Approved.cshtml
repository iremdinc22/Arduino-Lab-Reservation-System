@model List<LabReservation.Models.Reservation>
@{
    ViewData["Title"] = "Approved Reservations";
    Layout = "~/Views/Shared/NoFooterLayout.cshtml";
    
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            animation: fadeIn 0.8s ease forwards;
            padding: 40px;
            background-color: #f8f9fa;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-in-out;
        }
    </style>
</head>
<body class="fade-in">

    <div class="container">
        <div class="text-center mb-4">
            <i class="bi bi-patch-check-fill text-success" style="font-size: 3rem;"></i>
            <h2 class="mt-2 text-success">Approved Reservations</h2>
            <p class="text-muted">All confirmed and approved lab reservations are listed below.</p>
        </div>

        <div class="card shadow border-success">
            <div class="card-body">
                <table class="table table-hover text-center align-middle table-bordered">
                    <thead class="table-success">
                        <tr>
                            <th><i class="bi bi-person-fill"></i> Student</th>
                            <th><i class="bi bi-flask"></i> Lab</th>
                            <th><i class="bi bi-calendar-event"></i> Date</th>
                            <th><i class="bi bi-clock-history"></i> Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td><span class="badge bg-dark fs-6">@r.User?.StudentNumber</span></td>
                                <td>@r.Lab?.Name</td>
                                <td>@r.Date.ToString("MMMM dd, yyyy")</td>
                                <td>@r.StartTime - @r.EndTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
