@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LabReservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/LabReservation.styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    @RenderSection("Styles", required: false)

    <style>
        body {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        body.loaded {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>

<body>

    <!-- âœ… Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg" style="background: linear-gradient(90deg, #66a6ff 0%, #89f7fe 100%);">
            <div class="container">
                <a class="navbar-brand fw-bold text-dark" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-vial"></i> LabReservation
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Master")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Master" asp-action="All">Manage Reservations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Master" asp-action="Approved">âœ… Approved Reservations</a>
                            </li>
                        }

                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark fw-semibold">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ðŸ“¦ Sayfa iÃ§eriÄŸi -->
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- âŒ Footer yok -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.body.classList.add('loaded');
        });
    </script>

</body>
</html>
